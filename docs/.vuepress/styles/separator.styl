separatorLeft(separatorColor)
    text-align: left !important
    &::before, &::after
        display:                    table
        content:                    ' '
        -webkit-flex-basis:         0
        -ms-flex-preferred-size:    0
        flex-basis:                 0
        -webkit-box-ordinal-group:  2
        -webkit-order:              1
        -ms-flex-order:             1
        order:                      1
    &::after
        clear:          both
        position:       relative !important
        width:          3rem
        border-bottom:  0.125rem solid separatorColor
        margin:         1rem auto 0
        margin-left:    0 !important
